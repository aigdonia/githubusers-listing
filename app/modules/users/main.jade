#github-users
  section.column.large-3.medium-3.users-list
    span.users-list__heading Github Users
    section.users-list__item(ng-repeat='user in ctrl.usersList', ui-sref='ghusers.details({login: user.login})')
      img(src='{{::user.avatar_url}}')
      div
        h4(ng-bind='::user.login')
    a.users-list__item.load-more(ng-click='ctrl.loadMore()', ng-if='!!ctrl.loadMoreUrl' ladda='ctrl.loading') Load More
  section.column.large-9.medium-9
    .user-details-placeholder(ng-show='loadingUser')
      section.user-details__header
        img
        h2
        small
      section.user-details__details.large-offset-2.large-8

    .user-details(ui-view='', ng-hide='loadingUser')
      section.user-details__header
        img(src='{{::ctrl.currentUser.avatar_url}}')
        h2(ng-bind='::ctrl.currentUser.name')
        small(ng-bind='::ctrl.currentUser.login')
      section.user-details__details.large-offset-2.large-8
        dl
          dt Email
          dd(ng-bind='::ctrl.currentUser.email')
          dt Joined at
          dd(ng-bind="::ctrl.currentUser.created_at | date:'dd, MMM yyyy'")
      section.user-details__details.user-details__details--statistics.large-offset-2.large-8
        ul
          li(ng-repeat='(title, value) in ctrl.currentUser.stats')
            div.user-details__details__numeric
              label {{title}}
              span {{value | shortyNumbers}}

      
